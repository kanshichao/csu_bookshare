/* components/loading/index.wxss */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.spinner {
  border-width: 4rpx;
  border-style: solid;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
