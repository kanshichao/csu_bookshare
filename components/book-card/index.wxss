/* components/book-card/index.wxss */
.book-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
}

.cover-container {
  position: relative;
  width: 160rpx;
  height: 220rpx;
  flex-shrink: 0;
  margin-right: 25rpx;
}

.cover {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.status {
  position: absolute;
  top: 0;
  right: 0;
  background: var(--error-color);
  color: #fff;
  font-size: 22rpx;
  padding: 5rpx 12rpx;
  border-radius: 0 8rpx 0 8rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.author {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 10rpx;
}

.meta {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

.category, .dormitory {
  font-size: 24rpx;
  color: #fff;
  background: var(--primary-color);
  padding: 5rpx 15rpx;
  border-radius: 30rpx;
}

.dormitory {
  background: var(--secondary-color);
}
