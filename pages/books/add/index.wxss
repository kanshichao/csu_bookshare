/* pages/books/add/index.wxss */
@import "../../styles/theme.wxss";

.add-book-container {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item .label {
  display: block;
  font-size: 30rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-item input,
.form-item .picker {
  width: 100%;
  height: 90rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #e1e5eb;
}

.input-with-action {
  display: flex;
  align-items: center;
}

.input-with-action input {
  flex: 1;
  margin-right: 20rpx;
}

.scan-btn {
  width: 140rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: var(--primary-color);
  background: rgba(var(--primary-rgb), 0.1);
  border-radius: 12rpx;
  padding: 0;
}

.cover-uploader {
  width: 200rpx;
  height: 280rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border: 1rpx dashed #e1e5eb;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.uploader-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.uploader-placeholder text {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 15rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e1e5eb;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 12rpx;
  margin-top: 60rpx;
}
