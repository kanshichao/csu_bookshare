/* pages/profile/change-password/index.wxss */
@import "../../styles/theme.wxss";

.change-password-container {
  padding: 40rpx;
}

.form {
  margin-top: 60rpx;
}

.form-item {
  margin-bottom: 50rpx;
}

.form-item .label {
  display: block;
  font-size: 32rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-item input {
  width: 100%;
  height: 90rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  border: 1rpx solid #e1e5eb;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 12rpx;
  margin-top: 80rpx;
}
