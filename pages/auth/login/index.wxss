/* pages/auth/login/index.wxss */
@import "../../styles/theme.wxss";
@import "../../assets/fonts/iconfont.wxss";

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background: linear-gradient(to bottom, var(--primary-color), #f5f7fa);
  padding: 40rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  margin-bottom: 80rpx;
}

.login-header image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-header .title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 30rpx;
}

.login-header .subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
}

.login-form {
  width: 100%;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item .label {
  display: block;
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 15rpx;
  padding-left: 20rpx;
}

.form-item input {
  width: 100%;
  height: 90rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 45rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  color: var(--primary-color);
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 45rpx;
  margin-top: 60rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-footer {
  text-align: center;
  margin-top: 40rpx;
}

.login-footer text {
  color: #fff;
  font-size: 28rpx;
  text-decoration: underline;
}
